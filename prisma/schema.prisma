// This is your Prisma schema file,
// learn more about it in the docs: https://pris.ly/d/prisma-schema

generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider  = "postgresql"
  url       = env("DATABASE_URL")  // pooler
  directUrl = env("DIRECT_URL")    // direct
}

model Deal {
  id           String   @id @default(cuid())
  slug         String   @unique
  title        String
  description  String?
  price        Float
  salePrice    Float?
  platformId   String?
  platform     Platform? @relation(fields: [platformId], references: [id])
  shopId       String?
  shop         Shop?    @relation(fields: [shopId], references: [id])
  affiliateUrl String?
  rating       Float?   // 0-5
  cod          Boolean  @default(true) // Default to COD for local shops
  image        String?
  gallery      String?  // JSON string of image URLs array
  youtubeUrl   String?  // YouTube video URL for embedded videos
  area         String   // Govandi, Shivaji Nagar, Baiganwadi
  category     String   // electronics, clothing, food, etc.
  discountType String   // percentage, fixed, buy_one_get_one, etc.
  isActive     Boolean  @default(true)
  publishedAt  DateTime @default(now())
  createdAt    DateTime @default(now())
  updatedAt    DateTime @updatedAt
  viewCount    Int      @default(0) // Track page views

  clicks Click[]
  orders Order[]

  @@map("deals")
}

model Click {
  id        String   @id @default(cuid())
  dealId    String
  deal      Deal     @relation(fields: [dealId], references: [id])
  createdAt DateTime @default(now())

  @@map("clicks")
}

// NextAuth.js models
model Account {
  id                String  @id @default(cuid())
  userId            String
  type              String
  provider          String
  providerAccountId String
  refresh_token     String?
  access_token      String?
  expires_at        Int?
  token_type        String?
  scope             String?
  id_token          String?
  session_state     String?

  user User @relation(fields: [userId], references: [id], onDelete: Cascade)

  @@unique([provider, providerAccountId])
  @@map("accounts")
}

model Session {
  id           String   @id @default(cuid())
  sessionToken String   @unique
  userId       String
  expires      DateTime
  user         User     @relation(fields: [userId], references: [id], onDelete: Cascade)

  @@map("sessions")
}

model User {
  id            String    @id @default(cuid())
  name          String?
  email         String    @unique
  emailVerified DateTime?
  image         String?
  role          String    @default("user") // user, admin, editor, dealer, news_writer
  password      String?   // For credentials authentication
  createdAt     DateTime  @default(now())
  updatedAt     DateTime  @updatedAt

  accounts Account[]
  sessions Session[]
  shops    Shop[]   // Shops owned by this user

  @@map("users")
}

model VerificationToken {
  identifier String
  token      String   @unique
  expires    DateTime

  @@unique([identifier, token])
  @@map("verification_tokens")
}

// Platform model for dynamic platform management
model Platform {
  id          String   @id @default(cuid())
  name        String   @unique
  slug        String   @unique
  color       String   @default("bg-gray-500")
  description String?
  isActive    Boolean  @default(true)
  createdAt   DateTime @default(now())
  updatedAt   DateTime @updatedAt

  // Relations
  deals Deal[]

  @@map("platforms")
}

// News/Posts model for Phase 2
model Post {
  id          String   @id @default(cuid())
  slug        String   @unique
  title       String
  excerpt     String
  content     String
  image       String
  youtubeUrl  String?  // YouTube video URL for embedded videos
  category    String
  area        String
  author      String
  publishedAt DateTime @default(now())
  createdAt   DateTime @default(now())
  updatedAt   DateTime @updatedAt
  published   Boolean  @default(true)
  viewCount   Int      @default(0) // Track page views

  @@map("posts")
}

// Election model for tracking election-related content
model Election {
  id          String   @id @default(cuid())
  slug        String   @unique
  title       String
  description String?
  content     String
  image       String?
  youtubeUrl  String?  // YouTube video URL for embedded videos
  category    String   // "candidate", "party", "issue", "poll"
  area        String
  author      String
  publishedAt DateTime @default(now())
  createdAt   DateTime @default(now())
  updatedAt   DateTime @updatedAt
  published   Boolean  @default(true)
  viewCount   Int      @default(0) // Track page views

  @@map("elections")
}

// Universal view tracking model
model View {
  id        String   @id @default(cuid())
  type      String   // "deal", "post", "election"
  contentId String   // ID of the content being viewed
  userAgent String?  // Browser info
  ipAddress String?  // IP address (for analytics)
  referrer  String?  // Where they came from
  createdAt DateTime @default(now())

  @@map("views")
}

// Shop model for local businesses
model Shop {
  id            String   @id @default(cuid())
  name          String
  slug          String   @unique
  description   String?
  ownerName     String
  email         String
  phone         String
  whatsapp      String?
  address       String
  area          String   // Govandi, Shivaji Nagar, Baiganwadi
  category      String   // electronics, clothing, food, etc.
  businessHours String?
  image         String?
  status        String   @default("pending") // pending, active, suspended, rejected
  isVerified    Boolean  @default(false)
  isActive      Boolean  @default(true)
  rating        Float?   @default(0) // Average rating from customers
  totalOrders   Int      @default(0) // Track total orders
  userId        String?  // Link to user account
  activationNotes String? // Admin notes for activation/rejection
  paymentReference String? // Payment reference number
  activatedAt   DateTime? // When account was activated
  activatedBy   String?   // Admin who activated the account
  createdAt     DateTime @default(now())
  updatedAt     DateTime @updatedAt

  deals Deal[]
  orders Order[]
  user   User?   @relation(fields: [userId], references: [id])

  @@map("shops")
}

// Order model for COD orders
model Order {
  id          String   @id @default(cuid())
  dealId      String
  deal        Deal     @relation(fields: [dealId], references: [id])
  shopId      String
  shop        Shop     @relation(fields: [shopId], references: [id])
  customerName String
  customerPhone String
  customerEmail String?
  customerAddress String
  customerMessage String?
  quantity    Int      @default(1)
  totalAmount Float
  status      String   @default("pending") // pending, confirmed, delivered, cancelled
  orderType   String   @default("cod") // cod, online, etc.
  notes       String?
  createdAt   DateTime @default(now())
  updatedAt   DateTime @updatedAt

  @@map("orders")
}

// Contact information model for dynamic contact management
model ContactInfo {
  id            String   @id @default(cuid())
  email         String
  phone         String
  whatsapp      String
  address       String
  businessHours String
  isActive      Boolean  @default(true)
  createdAt     DateTime @default(now())
  updatedAt     DateTime @updatedAt

  @@map("contact_info")
}